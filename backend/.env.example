# -----------------------------
# OCR Agent Service (V1 – Stable for High-Level Testing)
# -----------------------------

# =============================
# Service metadata
# =============================
APP_VERSION=1.0.0
BUILD_COMMIT=local-dev
BUILD_DATE=2026-01-21


# =============================
# Tesseract configuration
# (Uncomment & set if needed)
# =============================
# TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe


# =============================
# Retention / batching limits
# =============================
ZERO_RETENTION_DEFAULT=true
MAX_DOCS_PER_BATCH=10
MAX_FILE_SIZE_MB=25


# =============================
# Safety hard limits (IMPORTANT)
# =============================
MAX_PAGES_PER_DOC=60
MAX_IMAGE_MEGAPIXELS=25
OCR_GLOBAL_TIMEOUT_S=150


# =============================
# PDF render quality
# =============================
# Used when PDF page has no extractable text
PDF_RENDER_DPI=250


# =============================
# Multi-engine OCR orchestration
# =============================

# docTR – layout / table heavy pages
ENABLE_DOCTR=true
ENGINE_TIMEOUT_DOCTR_S=30
ORCH_MAX_DOCTR_PAGES=8
DOCTR_ONLY_IF_TABLE_CANDIDATE=true

# TrOCR – freehand handwriting blocks
ENABLE_TROCR=true
ENGINE_TIMEOUT_TROCR_S=30
ORCH_MAX_TROCR_REGIONS=15


# =============================
# Form / handwriting enhancements
# =============================

# Boxed / grid handwriting OCR (insurance forms)
ENABLE_FORM_BOX_OCR=true

# Checkbox / tick / task-list detection
ENABLE_CHECKBOX_DETECTION=true


# =============================
# Runtime directories
# =============================
UPLOAD_DIR=uploads
RUNTIME_DIR=runtime
LOG_JSONL_PATH=runtime/logs.jsonl
